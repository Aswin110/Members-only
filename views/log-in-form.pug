extends layout 
block content 
     .m-auto.flex.flex-col.items-center
        h1= title
        form.flex.flex-col.gap-2(action='/login' method='POST')
            label(for="username") User Name: 
            input#username(type='text' name = 'username' placeholder='User Name' required='true' value=(undefined===username?'':username) style='border: 1px solid #ccc; border-radius: 4px; padding: 8px; margin-bottom: 10px;')
            
            label(for="password") Password: 
            input#password(type='password' name = 'password' placeholder='Password' required='true' value=(undefined===password?'':password) style='border: 1px solid #ccc; border-radius: 4px; padding: 8px; margin-bottom: 10px;')
            
            button(type='submit' ) Submit
        
        if errors 
            ul 
                for error in errors 
                    li!=error.msg