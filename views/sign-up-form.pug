extends layout 
block content
    .m-auto.flex.flex-col.items-center
        h1= title
        form.flex.flex-col.gap-2(action='/signup' method='POST')
            label(for="first_name") First Name: 
            input#first_name(type='text' name = 'first_name' placeholder='First name' required='true' value=(undefined===first_name?'':first_name) style='border: 1px solid #ccc; border-radius: 4px; padding: 8px; margin-bottom: 10px;')
            
            label(for="last_name") Last Name: 
            input#last_name(type='text' name = 'last_name' placeholder='Last name' required='true' value=(undefined===last_name?'':last_name) style='border: 1px solid #ccc; border-radius: 4px; padding: 8px; margin-bottom: 10px;')
            
            label(for="username") User Name: 
            input#username(type='text' name = 'username' placeholder='User Name' required='true' value=(undefined===username?'':username) style='border: 1px solid #ccc; border-radius: 4px; padding: 8px; margin-bottom: 10px;')
            
            label(for="password") Password: 
            input#password(type='password' name = 'password' placeholder='Password' required='true' value=(undefined===password?'':password) style='border: 1px solid #ccc; border-radius: 4px; padding: 8px; margin-bottom: 10px;')
            
            label(for="confirmPassword") Confirm Password: 
            input#confirmPassword(type='password' name = 'confirmPassword' placeholder='Confirm Password' required='true' value=(undefined===confirmPassword?'':confirmPassword) style='border: 1px solid #ccc; border-radius: 4px; padding: 8px; margin-bottom: 10px;')
            
            button(type='submit' ) Submit

        if errors 
            ul 
                for error in errors 
                    li!=error.msg
            